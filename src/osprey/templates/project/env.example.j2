# {{ project_name }} Environment Configuration

# API Keys
CBORG_API_KEY=your-cborg-api-key-here
STANFORD_API_KEY=your-stanford-api-key-here
ARGO_API_KEY=your-argo-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# Project Configuration (Optional - for advanced use cases)
# Uncomment if you need to override the project root set in config.yml
#PROJECT_ROOT={{ project_root }}
#LOCAL_PYTHON_VENV=/path/to/your/venv/bin/python

# Timezone
TZ=America/Los_Angeles

{% if epics_enabled %}

# ============================================================
# EPICS CONFIGURATION ({{ epics_facility.upper() }} Facility)
# ============================================================
{% if epics_setup_function %}
# Gateway automatically configured by {{ epics_setup_function }}()
{% if epics_facility == 'aps' %}
# - On aps4.anl.gov network: Uses local broadcast
# - Outside aps4 network: Uses pvgatemain1.aps4.anl.gov:5064
{% elif epics_facility == 'als' %}
# Gateway: cagw-alsdmz.als.lbl.gov:5064
{% endif %}
# No manual configuration needed - handled by setup function in registry.py

# Optional: Override automatic configuration
# EPICS_CA_ADDR_LIST={{ epics_gateway_address }}
# EPICS_CA_SERVER_PORT={{ epics_gateway_port }}
# EPICS_CA_AUTO_ADDR_LIST=NO
{% else %}
# Custom facility configuration
EPICS_CA_ADDR_LIST={{ epics_gateway_address or 'your-gateway.example.com' }}
EPICS_CA_SERVER_PORT={{ epics_gateway_port }}
EPICS_CA_AUTO_ADDR_LIST=NO
EPICS_CA_MAX_ARRAY_BYTES=16777216
{% endif %}
{% endif %}

# Optional: Proxy settings (uncomment if behind corporate firewall)
# NO_PROXY=localhost,127.0.0.1
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=http://proxy.example.com:8080

# Optional: Langfuse LLM observability (uncomment to enable monitoring/tracing)
# LANGFUSE_ENABLED=true
# LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
# LANGFUSE_SECRET_KEY=your-langfuse-secret-key
# LANGFUSE_HOST=https://cloud.langfuse.com
